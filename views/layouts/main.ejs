<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title + ' | Email Service' : 'Email Service' %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
  <div class="app-container">
    <% if (typeof showNavbar === 'undefined' || showNavbar !== false) { %>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <i class='bx bx-envelope-open'></i> Email Service
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="https://github.com/Parado-xy/node-mail-service">API Docs</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/auth/signout">Sign Out</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/signin">Sign In</a>
              </li>
              <li class="nav-item">
                <a class="nav-link btn btn-primary text-white" href="/auth/signup">Register</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <% } %>

    <main class="container">
      <% if (typeof messages !== 'undefined' && messages) { %>
        <div class="alert alert-<%= typeof messageType !== 'undefined' ? messageType : 'info' %> alert-dismissible fade show mt-3">
          <%= messages %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <%- body %>
    </main>

    <footer class="footer">
      <div class="container text-center py-3">
        <p>&copy; <%= new Date().getFullYear() %> Email Service. All rights reserved.</p>
      </div>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>