<!-- filepath: views/dashboard/index.ejs -->
<div class="dashboard-container">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="dashboard-title">
      <i class='bx bxs-dashboard'></i> Organization Dashboard
    </h1>
    <div class="d-flex">
      <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#testEmailModal">
        <i class='bx bx-envelope'></i> Test Email
      </button>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#apiKeyModal">
        <i class='bx bx-key'></i> View API Key
      </button>
    </div>
  </div>

  <!-- Organization Info Card -->
  <div class="card mb-4 dashboard-card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h5 class="card-title">Organization Information</h5>
          <div class="organization-info">
            <p>
              <strong><i class='bx bx-building'></i> Name:</strong> 
              <span><%= organization.name %></span>
            </p>
            <p>
              <strong><i class='bx bx-envelope'></i> Email:</strong> 
              <span><%= organization.email %></span>
            </p>
            <p>
              <strong><i class='bx bx-calendar'></i> Created On:</strong> 
              <span><%= new Date(organization.createdAt).toLocaleDateString() %></span>
            </p>
            <p>
              <strong><i class='bx bx-check-circle'></i> Status:</strong> 
              <span class="badge bg-<%= organization.status === 'active' ? 'success' : 'warning' %>">
                <%= organization.status.charAt(0).toUpperCase() + organization.status.slice(1) %>
              </span>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="usage-stats">
            <h5 class="card-title">Email Usage</h5>
            <div class="usage-meter">
              <div class="progress">
                <div class="progress-bar" role="progressbar" 
                  style="width: <%= Math.min(organization.usage.totalEmailsSent / 200 * 100, 100) %>%" 
                  aria-valuenow="<%= organization.usage.totalEmailsSent %>" 
                  aria-valuemin="0" aria-valuemax="200">
                </div>
              </div>
              <div class="d-flex justify-content-between mt-1">
                <span class="small"><%= organization.usage.totalEmailsSent %> emails sent</span>
                <span class="small">Daily limit: 200</span>
              </div>
            </div>

            <p class="mt-3">
              <strong><i class='bx bx-time'></i> Last Email Sent:</strong> 
              <span>
                <%= organization.usage.lastEmailSentAt ? 
                  new Date(organization.usage.lastEmailSentAt).toLocaleString() : 
                  'No emails sent yet' %>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity Card -->
  <div class="card mb-4 dashboard-card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Recent Email Activity</h5>
      <a href="/dashboard/emails" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th>Recipient</th>
              <th>Subject</th>
              <th>Status</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% if (recentEmails && recentEmails.length > 0) { %>
              <% recentEmails.forEach(email => { %>
                <tr>
                  <td><%= email.to %></td>
                  <td><%= email.subject %></td>
                  <td>
                    <span class="badge bg-<%= 
                      email.status === 'sent' ? 'success' : 
                      email.status === 'queued' ? 'info' : 'danger' 
                    %>">
                      <%= email.status %>
                    </span>
                  </td>
                  <td><%= new Date(email.createdAt).toLocaleString() %></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center py-3">No email activity yet</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- API Usage Guide -->
  <div class="card dashboard-card">
    <div class="card-header">
      <h5 class="mb-0">API Usage Guide</h5>
    </div>
    <div class="card-body">
      <p>To send an email using our API, make a POST request as shown below:</p>
      
      <div class="code-block">
        <pre><code>curl -X POST https://your-api.com/api/v1/mail \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{
    "to": "recipient@example.com",
    "subject": "Hello from API",
    "content": "&lt;h1&gt;Hello!&lt;/h1&gt;&lt;p&gt;This is a test email sent via API.&lt;/p&gt;"
  }'</code></pre>
        <button class="btn btn-sm btn-outline-secondary copy-btn">
          <i class='bx bx-copy'></i> Copy
        </button>
      </div>
      
      <div class="mt-3">
        <a href="/docs" class="btn btn-outline-primary">
          <i class='bx bx-book'></i> View Full Documentation
        </a>
      </div>
    </div>
  </div>
</div>

<!-- API Key Modal -->
<div class="modal fade" id="apiKeyModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class='bx bx-key'></i> Your API Key
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-warning">
          <i class='bx bx-error-circle'></i>
          Keep this key secure. It grants full access to send emails on behalf of your organization.
        </div>
        
        <div class="api-key-container">
          <code id="apiKeyValue"><%= organization.apiKey %></code>
          <button class="btn btn-sm btn-outline-secondary copy-btn" data-clipboard-target="#apiKeyValue">
            <i class='bx bx-copy'></i> Copy
          </button>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#regenerateKeyModal">
          <i class='bx bx-refresh'></i> Regenerate Key
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Test Email Modal -->
<div class="modal fade" id="testEmailModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class='bx bx-envelope'></i> Send Test Email</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="testEmailForm" action="/dashboard/test-email" method="POST">
          <div class="mb-3">
            <label for="to" class="form-label">Recipient Email</label>
            <input type="email" class="form-control" id="to" name="to" required>
          </div>
          
          <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="subject" name="subject" 
                   value="Test Email from Email Service" required>
          </div>
          
          <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="4" required>
This is a test email sent from your Email Service dashboard.

If you received this, your email service is working correctly!
            </textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="testEmailForm" class="btn btn-primary">Send Test Email</button>
      </div>
    </div>
  </div>
</div>